<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FormLogin"
    >

    <androidx.appcompat.widget.AppCompatImageView
        android:src="@drawable/landscapecadastro"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></androidx.appcompat.widget.AppCompatImageView>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_layer_gradient">

    </View>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/Slogan"
                style="@style/TextAppearance.AppCompat.Headline"
                android:text="FaÃ§a o seu cadastro"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="18dp"
                app:layout_constraintBottom_toTopOf="@id/Editnome"
                android:layout_height="wrap_content">
            </TextView>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/Editnome"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="18dp"
                android:hint="Nome"
                android:inputType="text"
                android:imeOptions="actionDone"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:paddingStart="18dp"
                android:paddingEnd="18dp"
                android:background="@drawable/editeextbutton"
                app:layout_constraintBottom_toTopOf="@+id/Editemail">

            </androidx.appcompat.widget.AppCompatEditText>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/Editemail"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="18dp"
                android:hint="Email"
                android:inputType="text"
                android:imeOptions="actionDone"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:paddingStart="18dp"
                android:paddingEnd="18dp"
                android:background="@drawable/editeextbutton"
                app:layout_constraintBottom_toTopOf="@+id/Editsenha">

            </androidx.appcompat.widget.AppCompatEditText>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/Editsenha"
                android:inputType="textPassword"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="36dp"
                android:hint="Senha"
                android:imeOptions="actionDone"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:paddingStart="18dp"
                android:paddingEnd="18dp"
                android:background="@drawable/editeextbutton"
                app:layout_constraintBottom_toTopOf="@+id/cadastrar">

            </androidx.appcompat.widget.AppCompatEditText>

            <androidx.appcompat.widget.AppCompatButton

                android:id="@+id/cadastrar"
                android:text="Cadastrar-se"
                app:layout_constraintBottom_toTopOf="@id/irlogin"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="18dp"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_marginEnd="18dp"
                android:layout_marginBottom="36dp"
                android:textAllCaps="false"
                android:background="@drawable/bg_button_normal"
                android:textColor="@android:color/white">

            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/irlogin"
                android:layout_width="match_parent"
                android:text="Login"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textAlignment="center"
                android:layout_marginBottom="36dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_height="wrap_content">

            </androidx.appcompat.widget.AppCompatTextView>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>